<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="5" ></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(80,80) %></td>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
        <% unless current_user == user %>
          <% if current_user.following?(user) %>
            <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></td>
          <% else %>
            <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
          <% end %>
        <% end %>
        <td colspan="2" ><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
