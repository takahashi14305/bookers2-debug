<div class='container px-12 px-sm-0'>
  <div class='row'>
    <h2>Follow Users</h2>
    <% if users.exists? %>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @users.name %></td>
            <td><%= @users.get_profile_image %></td>
            <td>フォロー数: <%= @users.followings.count %></td>
            <td>フォロワー数: <%= @users.followers.count %></td>
            <td><%= link_to 'Show', @user %></td>
          </tr>
        </tbody>
      </table>
    <% else %>
      <p>ユーザーはいません</p>
    <% end %>
  </div>
</div>